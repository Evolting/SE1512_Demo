<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Student List" Height="300" Width="450">
    <Grid>
        <DataGrid x:Name="dgStudent" Margin="0,0,70,0" Width="Auto" Height="Auto" IsReadOnly="True"/>
        <Button Name="btnAdd" HorizontalAlignment="Right" Margin="0,20,10,0" VerticalAlignment="Top" Width="50" Height="21" Click="btnAdd_Click">
            <TextBlock>Add</TextBlock>
        </Button>
        <Button x:Name="btnUpdate" HorizontalAlignment="Right" Margin="0,60,10,0" VerticalAlignment="Top" Width="50" Height="21" Click="btnUpdate_Click">
            <TextBlock>Update</TextBlock>
        </Button>
        <Button x:Name="btnDelete" HorizontalAlignment="Right" Margin="0,100,10,0" VerticalAlignment="Top" Width="50" Height="21" Click="btnDelete_Click">
            <TextBlock>Delete</TextBlock>
        </Button>
    </Grid>
</Window>